<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Leanback">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="searchOrbViewStyle">@style/CustomSearchOrbView</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#4CAF50</item>
    </style>

    <style name="CustomSearchOrbView" parent="Widget.Leanback.SearchOrbViewStyle">
        <item name="searchOrbIcon">@drawable/ic_account_circle_black_24dp</item>
    </style>

</resources>
